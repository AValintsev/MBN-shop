@model List<Nop.Plugin.Widgets.NivoSliderLocalized.Models.PublicInfoModel>
@{
	Layout = "";

	Html.AddScriptParts("~/Plugins/Widgets.NivoSliderLocalized/Scripts/jquery.nivo.slider.js");
	Html.AddCssFileParts("~/Plugins/Widgets.NivoSliderLocalized/Content/nivoslider/nivo-slider.css");
	Html.AddCssFileParts("~/Plugins/Widgets.NivoSliderLocalized/Content/nivoslider/themes/custom/custom.css");
}
@using Nop.Web.Framework.UI

@helper RenderSliderLine(string pictureUrl, string text, string link, string dataTransition = "")
{
if (!string.IsNullOrEmpty(pictureUrl))
{
	if (!string.IsNullOrEmpty(link))
	{
			<a href="@link">
				<img src="@pictureUrl" data-thumb="@pictureUrl" data-transition="@dataTransition" alt="" title="@text" />
			</a>
	}
	else
	{
			<img src="@pictureUrl" data-thumb="@pictureUrl" data-transition="@dataTransition" alt="" title="@text" />
	}
}
}
<div class="slider-wrapper theme-custom">
	<div id="nivo-slider" class="nivoSlider">
		@foreach (var modelItem in Model)
		{
			@RenderSliderLine(modelItem.PictureUrl, modelItem.Text, modelItem.Link)
		}
	</div>
</div>
<script type="text/javascript">
	$(window).load(function () {
		$('#nivo-slider').nivoSlider();
	});
</script>
