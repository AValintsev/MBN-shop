
<div class="header">
    <div>
        @Html.Widget("header")
        <div class="header-upper">
            <div class="container">
                <div class="header-selectors-wrapper">
                    @Html.Action("TaxTypeSelector", "Common")
                    @Html.Action("CurrencySelector", "Common")
                    @Html.Action("LanguageSelector", "Common")
                    @Html.Widget("header_selectors")
                </div>
                <div class="header-links-wrapper">
                    @Html.Action("HeaderLinks", "Common")
                    @Html.Action("FlyoutShoppingCart", "ShoppingCart")
                </div>
            </div>
        </div>
        <div class="header-lower clearfix">
            <div class="header-logo">
                @Html.Action("Logo", "Common")
            </div>
            <div class="header-tools">
                <div class="blocks-wrapper clearfix">
                    <div class="header-block">
                        <div id="topcartlink">
                            <h3>@T("ShoppingCart")</h3>
                            <p>
                                <a href="@Url.RouteUrl("ShoppingCart")">
                                    <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                    @{
                                        var total = Html.Action("GetShoppintCartItemsCount", "Common");
                                    }
                                    <span class="cart-qty">(@total)</span>
                                </a>
                            </p>
                        </div>

                    </div>
                    <div class="header-block">
                        <div>
                            <h3>@T("ContactUs")</h3>
                            <p>
                                <a href="@Url.RouteUrl("ContactUs")" title="@T("ContactUs")"><i class="fa fa-address-card-o" aria-hidden="true"></i></a>
                            </p>
                        </div>
                    </div>
                    <div class="header-block">
                        <div>
                            <h3>Наш канал</h3>
                            <p><i class="fa fa-youtube" aria-hidden="true"></i></p>
                        </div>
                    </div>
                </div>
                <div class="search-box store-search-box clearfix">
                    @Html.Action("SearchBox", "Catalog")
                </div>
            </div>
        </div>
        <div class="header-menu">
            @Html.Action("TopMenu", "Catalog")
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('.header').on('mouseenter', '#topcartlink', function () {
            $('#flyout-cart').addClass('active');
        });
        $('.header').on('mouseleave', '#topcartlink', function () {
            $('#flyout-cart').removeClass('active');
        });
        $('.header').on('mouseenter', '#flyout-cart', function () {
            $('#flyout-cart').addClass('active');
        });
        $('.header').on('mouseleave', '#flyout-cart', function () {
            $('#flyout-cart').removeClass('active');
        });
    });
</script>