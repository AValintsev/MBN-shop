@model IList<ProductOverviewModel>

@using Nop.Web.Models.Catalog;

@if (Model.Count > 0)
{
    <div class="home-page-product-grid">
        <div class="blue-title">
            <h2 class="owl-title">
                @T("HomePage.Products")
            </h2>
        </div>
        <div class="item-grid owl-carousel">
            @foreach (var item in Model)
            {
                <div class="item-box">
                    @Html.Partial("_ProductBox", item)
                </div>
            }
        </div>
    </div>
}
