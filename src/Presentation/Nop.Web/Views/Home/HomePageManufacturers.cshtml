@model IList<ManufacturerModel>

@using Nop.Web.Models.Catalog;

@if (Model.Count > 0)
{
	<div class="home-page-manufacturers-grid">
		<div class="blue-title">
			<h2 class="owl-title">
				Производители
			</h2>
		</div>
		<div class="item-grid owl-carousel">
			@foreach (var item in Model)
			{
				<div class="item-box">
					<a href="@Url.RouteUrl("Manufacturer", new { SeName = item.SeName })">
						<img src="@item.PictureModel.ImageUrl" title="@item.PictureModel.Title" alt="@item.PictureModel.Title" />
					</a>
				</div>
			}

		</div>
	</div>
}
